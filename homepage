    <img src="file:///C:/Users/User/Documents/AMPLE%20BI/%F0%9F%A6%86%20icon%20_menu_.svg" alt="Menu" class="icon" id="menuIcon">
    
    <script>
        const menuIcon = document.getElementById('menuIcon');
        const leftPanel = document.getElementById('leftPanel');
        const strategyDashboard = document.getElementById('strategyDashboard');
        const strategyDashboardContent = document.getElementById('strategyDashboardContent');
        const salesPerformance = document.getElementById('salesPerformance');
        const salesPerformanceContent = document.getElementById('salesPerformanceContent');
        const inventoryPlanning = document.getElementById('inventoryPlanning');
        const inventoryPlanningContent = document.getElementById('inventoryPlanningContent');
        const inventoryAged = document.getElementById('inventoryAged');
        const inventoryAgedContent = document.getElementById('inventoryAgedContent');
        const inventoryAgedByMoving = document.getElementById('inventoryAgedByMoving');

        menuIcon.addEventListener('click', () => {
            leftPanel.classList.toggle('hidden');
            menuIcon.classList.toggle('shifted');
            adjustRectangles();
        });

        strategyDashboard.addEventListener('click', () => {
            toggleVisibility(strategyDashboardContent);
        });

        salesPerformance.addEventListener('click', () => {
            toggleVisibility(salesPerformanceContent);
        });

        inventoryPlanning.addEventListener('click', () => {
            toggleVisibility(inventoryPlanningContent);
        });

        inventoryAged.addEventListener('click', () => {
            toggleVisibility(inventoryAgedContent);
        });

        inventoryAgedByMoving.addEventListener('click', () => {
            toggleVisibility(document.getElementById('rectangle9'));
            toggleVisibility(document.getElementById('rectangle33'));
            toggleVisibility(document.getElementById('rectangle36'));
            toggleVisibility(document.getElementById('rectangle26'));
            toggleVisibility(document.getElementById('rectangle27'));
            toggleVisibility(document.getElementById('rectangle10'));
        });

        function toggleVisibility(element) {
            if (element.classList.contains('visible')) {
                element.classList.remove('visible');
                element.style.display = 'none';
            } else {
                element.classList.add('visible');
                element.style.display = 'block';
            }
        }

        function adjustRectangles() {
            const leftPanelWidth = leftPanel.classList.contains('hidden') ? 0 : 300;
            document.querySelectorAll('.dynamic-rectangle').forEach(rect => {
                rect.style.marginLeft = `${leftPanelWidth}px`;
            });
        }

        // Create rectangles on load
        document.addEventListener('DOMContentLoaded', () => {
            const content = document.body;
            const rectangles = [
                { id: 'rectangle9', width: '1313px', height: '408px', left: '509px', top: '186px' },
                { id: 'rectangle33', width: '1099px', height: '319px', left: '121px', top: '636px' },
                { id: 'rectangle36', width: '556px', height: '319px', left: '1266px', top: '636px' },
                { id: 'rectangle26', width: '338px', height: '116px', left: '121px', top: '332px' },
                { id: 'rectangle27', width: '338px', height: '117px', left: '121px', top: '477px' },
                { id: 'rectangle10', width: '338px', height: '116px', left: '121px', top: '186px' }
            ];

            rectangles.forEach(rect => {
                const rectangle = document.createElement('div');
                rectangle.className = 'dynamic-rectangle';
                rectangle.id = rect.id;
                Object.assign(rectangle.style, {
                    width: rect.width,
                    height: rect.height,
                    left: rect.left,
                    top: rect.top
                });
                content.appendChild(rectangle);
            });
        });
    </script>
